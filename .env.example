# Backend Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=njcabinets_db
DB_PORT=3306

# Server Configuration
PORT=8080

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-here
# How long tokens stay valid (e.g. 8h, 24h, 7d)
JWT_EXPIRES=8h

# Node Environment
NODE_ENV=development

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Notifications polling interval (ms)
NOTIFICATIONS_POLL_INTERVAL_MS=15000

# Public proposal token TTL (minutes)
PUBLIC_PROPOSAL_TOKEN_TTL_MIN=1440

# Resources upload dir (optional override)
RESOURCES_UPLOAD_DIR=./uploads/resources
