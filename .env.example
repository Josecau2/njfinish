# Backend Environment Variables
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=njcabinets_db
DB_PORT=3306

# Server Configuration
PORT=8080
APP_URL=http://localhost:5173

# JWT Secret (generate a secure random string for production)
JWT_SECRET=your-super-secret-jwt-key-here
# How long tokens stay valid (e.g. 8h, 24h, 7d)
JWT_EXPIRES=8h

# Cookie SameSite setting: 'strict' (recommended), 'lax', or 'none' (requires HTTPS)
AUTH_COOKIE_SAMESITE=strict

# Node Environment
NODE_ENV=development

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=NJ Cabinets <no-reply@example.com>
ADMIN_NOTIFY_EMAIL=notifications@example.com
# Legacy Gmail fallback (if SMTP_* not provided)
GMAIL_USER=
GMAIL_APP_PASS=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Notifications polling interval (ms)
NOTIFICATIONS_POLL_INTERVAL_MS=15000

# Public proposal token TTL (minutes)
PUBLIC_PROPOSAL_TOKEN_TTL_MIN=1440

# Resources upload dir (optional override)
RESOURCES_UPLOAD_DIR=./uploads/resources
# Stripe Payments
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_WEBHOOK_PATH_TOKEN=
STRIPE_WEBHOOK_TOLERANCE_SECONDS=300
