# Frontend Environment Variables
# Copy this file to .env and update the values as needed

# API Base URL
# For development: http://localhost:8080
# For production: https://app.njcontractors.com
VITE_API_URL=http://localhost:8080

# App Environment
VITE_NODE_ENV=development

# Optional: Enable debug mode
VITE_DEBUG=false

# Notifications polling interval (ms)
VITE_NOTIFICATIONS_POLL_INTERVAL_MS=15000

# Public proposal token TTL (minutes)
VITE_PUBLIC_PROPOSAL_TOKEN_TTL_MIN=1440

# URL obfuscation
# Salt used by Hashids to encode numeric IDs in URLs. Set a strong, unique value per environment.
# Example: run `node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"` to generate one
VITE_URL_ID_SALT=change-me-please

# Minimum encoded length for IDs (pads output for consistency). 8-12 is typical.
VITE_URL_ID_MINLEN=8
